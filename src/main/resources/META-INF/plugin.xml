<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.rinchinov.ijdbtplugin</id>
    <name>DBT</name>
    <vendor>rinchinov</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.python</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.pycharm.professional</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <projectConfigurable
                id="DBTPluginProjectConfigurable"
                instance="com.github.rinchinov.ijdbtplugin.extentions.PluginProjectConfigurable"
                displayName="DBT Project Settings"/>
        <notificationGroup
                id="DBT Notification Group"
                displayType="BALLOON"
                toolWindowId="null"
                isLogByDefault="true"/>
        <toolWindow
                factoryClass="com.github.rinchinov.ijdbtplugin.extentions.ToolMainWindow"
                id="DBT"/>
        <psi.referenceContributor
                implementation="com.github.rinchinov.ijdbtplugin.ref.DbtPsiReferenceContributor"
                language="DjangoTemplate"/>
        <lang.elementManipulator
                forClass="com.jetbrains.jinja2.template.psi.impl.Jinja2MemberNameImpl"
                implementationClass="com.github.rinchinov.ijdbtplugin.ref.Jinja2MemberNameManipulator"/>
        <lang.elementManipulator
                forClass="com.jetbrains.jinja2.template.psi.impl.Jinja2VariableReferenceImpl"
                implementationClass="com.github.rinchinov.ijdbtplugin.ref.Jinja2VariableReferenceManipulator"/>

    </extensions>

</idea-plugin>
